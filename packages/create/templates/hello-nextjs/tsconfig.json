/* Visit https://aka.ms/tsconfig to read more about this file */{
  "compilerOptions": {
    "experimentalDecorators": true, /* Enable experimental support for legacy experimental decorators. */
    "emitDecoratorMetadata": true, /* Emit design-type metadata for decorated declarations in source files. */
    "target": "esnext", // Target modern JavaScript
    "module": "Node16", // Use CommonJS for compatibility with Node.js
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ], // Include DOM and ES2020 APIs
    "allowJs": true, // Allow JavaScript files
    "skipLibCheck": true, // Skip type checks for library files
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Ensure compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true, // Enforce case-sensitive imports
    "noEmit": false, // Allow emitting compiled JavaScript
    "outDir": "./dist", // Output compiled files into "dist" directory
    "rootDir": "./src", // Specify root directory for source files
    "isolatedModules": true, // Required by Next.js for compilation
    "resolveJsonModule": true, // Allow importing JSON files
    "paths": {
      "@/*": ["./src/*"] // Map "@/..." to "src/..."
    },
    "incremental": true,
    "moduleResolution": "node16",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*.ts", // Include all files in "src" directory
    "src/**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules", // Exclude dependencies
    ".next", // Exclude Next.js build artifacts
    "dist" // Exclude output directory
  ]
}
